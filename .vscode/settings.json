{
    "tailwindCSS.rootFontSize": 14,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "[graphql]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "[tailwindcss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
