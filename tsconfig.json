{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "./src/@core/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "src/@core/types/*.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "i18n.js"
    ],
    "exclude": [
        "node_modules",
        "old-to-delete",
        "src/stories/**/*.ts"
    ]
}
